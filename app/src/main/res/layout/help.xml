<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:focusable="true"
        android:theme="@style/toolbar"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/bartext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help  /  Feedback"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:orientation="vertical" >

            <TextView
                android:text=" We are here to help you,  \n \n  Please write your query , help and feedback to the Email address kputsoftware@gmail.com. \n we will revert back to you as soon as possible. \n  \n or \n \n  click 'Email us' button at the bottom.   \n  Thank you. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editboxshape"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:text=""
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />

            <Button
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="?android:actionBarSize"
                android:layout_marginBottom="35dp"
                android:background="@drawable/buttonshape"
                android:text=" Email Us "
                android:layout_gravity="center_horizontal|center"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:textSize="25sp"
                android:textAlignment="center" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
